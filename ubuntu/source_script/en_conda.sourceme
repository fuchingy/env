#!/bin/bash

# Below is the content cut from .bashrc after executing '/nfs/teams/perf/static/conda/mambaforge3/bin/conda init', as described in https://sifive.atlassian.net/wiki/spaces/CIP/pages/750747894/Conda+Environment for the Dabble simulation setup
# I choose to move it to this local_custom file from .bashrc for better management

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/nfs/teams/perf/static/conda/mambaforge3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/nfs/teams/perf/static/conda/mambaforge3/etc/profile.d/conda.sh" ]; then
        . "/nfs/teams/perf/static/conda/mambaforge3/etc/profile.d/conda.sh"
    else
        export PATH="/nfs/teams/perf/static/conda/mambaforge3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

